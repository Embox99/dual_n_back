generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   
  voiceType String   @default("robot")
  nLevel    Int      @default(1)
  createdAt DateTime @default(now())
  
  sessions  GameSession[]
}

model GameSession {
  id        String   @id @default(uuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  playedAt  DateTime @default(now())
  
  nLevel    Int
  rounds    Int  
  score     Int      
  accuracy  Int      
  
  matchesPos   Int 
  matchesAudio Int 
}